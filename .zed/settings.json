// Folder-specific settings
//
// For a full list of overridable settings, and general information on folder-specific settings,
// see the documentation: https://zed.dev/docs/configuring-zed#settings-files
{
  "languages": {
    "JavaScript": {
      "formatter": {
        "external": {
          "command": "npx",
          "arguments": [
            "@biomejs/biome",
            "format",
            "--write",
            "--stdin-file-path",
            "{buffer_path}",
          ],
        },
      },
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true,
      },
    },
    "TypeScript": {
      "formatter": {
        "external": {
          "command": "npx",
          "arguments": [
            "@biomejs/biome",
            "format",
            "--write",
            "--stdin-file-path",
            "{buffer_path}",
          ],
        },
      },
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true,
      },
    },
    "TSX": {
      "formatter": {
        "external": {
          "command": "npx",
          "arguments": [
            "@biomejs/biome",
            "format",
            "--write",
            "--stdin-file-path",
            "{buffer_path}",
          ],
        },
      },
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true,
      },
    },
  },
}
